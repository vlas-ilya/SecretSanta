{
  "type": "sqlite",
  "logging": ["error", "schema"],
  "logger": "simple-console",
  "database": "./db/game.sqlite3",
  "entities": ["./dist/**/model/*{.ts,.js}"],
  "migrationsTableName": "migration_table",
  "migrations": ["./dist/**/migrations/*{.ts,.js}"],
  "migrationsRun": true,
  "cli": {
    "migrationsDir": "./dist/**/migrations/"
  },
  "synchronize": true
}
